.right_body{
  flex: 1;
  overflow: scroll;
  -webkit-overflow-scrolling: touch;
}
.test{
  width: 100%;
  height: 100px;
  border-bottom: 1px solid #000;
  background: red;
}
.operator_title{
  width: 100%;
  height: 60rpx;
  margin-bottom: 24rpx;
}
.operator_title_text{
  font-size:36rpx;
  font-weight:bold;
  color:#333333;
  float: left;
  margin-left: 20rpx;
}
.down-arrow {
  display :inline-block;
  position: relative;
  width: 40rpx;
  height: 30rpx;
  margin-right: 20rpx;
  margin-top: 10rpx;
  float: right;
}

.down-arrow::after {
    display: inline-block;
    content: " ";
    height: 18rpx;
    width: 18rpx;
    border-width: 0 2rpx 2rpx 0;
    border-color: #333;
    border-style: solid;
    transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
    transform-origin: center;
    transition: transform .3s;
    position: absolute;
    top: 50%;
    right: 10rpx;
    margin-top: -10rpx;
}
.down-arrow.active::after {
    transform-origin: center;
    transform: rotate(-135deg);
    transition: transform .3s;
}
.tab{
  width: auto;
  height: 60rpx;
  padding: 0 20rpx;
  margin-left: 20rpx;
  margin-bottom: 30rpx;
  line-height: 60rpx;
  font-size: 32rpx;
  text-align: center;
  color: #333;
  background: #EDEDED;
  border-radius:12rpx;
  font-weight:400;
  float: left;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.choosed{
  color: #fff;
  background: #0069FF;
}
.grey{
  clear: both;
  width: 100%;
  height: 30rpx;
  background: #EDEDED;
  margin-top: 24rpx;
  margin-bottom: 40rpx;
}
.hide{
    display: none;
}

.show{
    display: block;
}