/* pages/generalizedQrCode/generalizedQrCode.wxss */

page {
  height: 100%;
}

.generalizedQrCode {
  width: 100%;
  height: 100%;
  position: relative;
  background:rgba(237,237,237,1);
}

.top {
  width: 100%;
  height: 484rpx;
  position: absolute;
  top: 0;
}

.bottom {
  width: 100%;
  height: 280rpx;
  position: absolute;
  bottom: 0;
}

.body {
  width: 670rpx;
  /* height: 938rpx; */
  border-radius: 20rpx;
  background: #fff;
  position: absolute;
  top: 204rpx;
  left: 40rpx;
  z-index: 99;
}

.body .main {
  position: relative;
  padding: 40rpx;
  text-align: center;
}

.body .main .img {
  width: 144rpx;
  height: 144rpx;
  border: 12rpx solid rgba(208, 228, 255, 1);
  border-radius: 50%;
  overflow: hidden;
  position: absolute;
  top: -72rpx;
  left: 262rpx;
}

.body .main .name {
  font-size: 40rpx;
  font-weight: bold;
  margin-top: 72rpx;
}

.body .main .phone {
  display: flex;
  justify-content: center;
  margin-top: 22rpx;
  font-weight: bold;
}

.body .main .phone .icon {
  width: 64rpx;
  height: 40rpx;
}

.body .main .phone .text {
  padding: 0 20rpx;
}

.body .main .qrCode {
  margin-top: 94rpx;
  width: 590rpx;
  height: 590rpx;
  border-radius: 20rpx;
  border: 2rpx solid rgba(0, 105, 255, 1);  
}

.body .main .qrCode .codeMain{
  width: 570rpx;
  height: 570rpx;
  padding: 10rpx;
  
}
.body .main .qrCode .codeMain .codeImg{
  width: 100%;
  height: 100%;
}
image {
  width: 100%;
  height: 100%;
}