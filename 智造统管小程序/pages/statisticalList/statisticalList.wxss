/* pages/statisticalList/statisticalList.wxss */

page {
  height: 100%;
}

.statisticcalList {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

/* 顶部信息 */

/* 医助部分 */

.top .main .assistant {
  width: 100%;
  height: 104rpx;
}

.top .main .assistant {
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.top .main .assistant .assistantMain {
  display: flex;
  justify-content: space-between;
  padding: 0 24rpx;
}

.top .main .assistant .assistantMain .assistantName {
  display: flex;
  margin: auto 0;
}

.top .main .assistant .assistantMain .assistantName .name {
  font-size: 40rpx;
  font-weight: bold;
  color: rgba(51, 51, 51, 1);
}

.top .main .assistant .assistantMain .assistantName .phone {
  font-size: 32rpx;
  color: rgba(51, 51, 51, 1);
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
}

.top .main .assistant .assistantMain .assistantName .phone .label {
  font-size: 32rpx;
  font-weight: 400;
  background: linear-gradient(45deg, rgba(255, 146, 0, 1) 0%, rgba(255, 89, 0, 1) 100%, rgba(255, 89, 0, 1) 100%);
  border-radius: 22rpx 22rpx 22rpx 0;
  padding: 2rpx 20rpx;
  color: #fff;
}

.top .main .assistant .assistantMain .doctorListButton van-button .van-button--info {
  background: linear-gradient(225deg, rgba(1, 128, 255, 1) 0%, rgba(0, 105, 255, 1) 100%);
  height: 68rpx;
  border-radius: 20rpx;
  font-size: 32rpx;
  font-weight: 400;
  line-height: 68rpx;
}

/* 医生部分 */

.doctor .tag {
  width: 702rpx;
  height: 202rpx;
  margin-left: 24rpx;
  background: #fff;
  border-radius: 20rpx;
  position: relative;
}

.doctor .tag_img {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  overflow: hidden;
  position: absolute;
  top: 30rpx;
  left: 20rpx;
  z-index: 2;
}

.doctor .tag_name {
  color: #333;
  font-size: 40rpx;
  font-weight: bold;
  position: absolute;
  top: 30rpx;
  left: 160rpx;
  line-height: 40rpx;
  display: flex;
  align-items: flex-start;
  justify-content: center;
}

.doctor .tag_name .tag-img {
  width: 150rpx;
  height: 46rpx;
  margin-left: 20rpx;
}

.doctor .tag_pos {
  width: 120rpx;
  height: 40rpx;
  background: linear-gradient(180deg, rgba(0, 162, 255, 1) 0%, rgba(0, 105, 255, 1) 100%);
  border-radius: 12rpx;
  color: #fff;
  line-height: 40rpx;
  text-align: center;
  font-size: 20rpx;
  position: absolute;
  top: 132rpx;
  left: 20rpx;
  z-index: 3;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.doctor .tag_dep {
  color: #333;
  font-size: 30rpx;
  font-weight: 400;
  position: absolute;
  top: 88rpx;
  left: 160rpx;
}

.doctor .tag_dep text{
  margin-left: 40rpx;
}

.doctor .tag_hos {
  width: 448rpx;
  height: 28rpx;
  line-height: 28rpx;
  color: #999;
  font-size: 28rpx;
  position: absolute;
  top: 144rpx;
  left: 160rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.doctor .tabs {
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.doctor .tab {
  text-align: center;
}

.doctor .tab view {
  width: 150rpx;
  height: 62rpx;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  line-height: 40rpx;
  padding-bottom: 18rpx;
  box-sizing: border-box;
}

.doctor .tab.active view {
  border-bottom: 4rpx solid #0069FF;
}

.pack .doctor .tag_pos {
  background: linear-gradient(180deg, #ff9000 0%, #FF5a00 100%);
}

.pack .doctor {
  margin-bottom: 30rpx;
}

.pack .doctor .tag {
  margin-left: 0;
}

/* 主要内容区 */

.body {
  background: rgba(237, 237, 237, 1);
  border-radius: 20rpx 20rpx 0 0;
  flex: 1;
  overflow: scroll;
  -webkit-overflow-scrolling: touch;
}

.body .main {
  padding: 40rpx 24rpx;
}

.body .main .title {
  font-size: 36rpx;
  font-weight: bold;
  color: rgba(51, 51, 51, 1);
}

.body .main .title span {
  font-size: 32rpx;
  color: #999;
  font-weight: 400;
}

.body .main .list {
  padding-top: 30rpx;
}

.body .main .list .listAllText {
  text-align: center;
  color: #666;
  font-size: 28rpx;
}

/* 智能柜与营养方案样式 */

.body .main .list .cabinet .box {
  border-radius: 20rpx;
  background: #fff;
  padding: 30rpx 20rpx;
  margin-bottom: 30rpx;
  display: flex;
}

.body .main .list .cabinet .box .img {
  width: 120rpx;
  height: 120rpx;
}

.body .main .list .cabinet .box .img image {
  width: 100%;
  height: 100%;
}

.body .main .list .cabinet .box .info {
  margin-left: 20rpx;
  padding: 4rpx 0;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.body .main .list .cabinet .box .info .title {
  width: 522rpx;
  font-size: 32rpx;
  font-weight: bold;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.body .main .list .cabinet .box .info .mes {
  width: 522rpx;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.body .main .list .cabinet .text {
  font-weight: bold;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.body .noList {
  margin-top: 90rpx;
}

.body .noList .img {
  width: 400rpx;
  height: 400rpx;
  margin: 0 auto;
}

.body .noList .img image {
  width: 100%;
  height: 100%;
}

.body .noList .text {
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  margin-top: 60rpx;
}

/* 消息详情样式 */
.body .main .pack {}

.body .main .pack .boxs {
  padding: 30rpx 20rpx;
  background-color: #fff;
  margin: 30rpx 0;
  border-radius: 20rpx;
}

.body .main .pack .product-boxs {
  padding: 30rpx 20rpx 1px;
}

.body .main .pack .boxs .text {
  display: flex;
  padding-top: 30rpx;
}

.body .main .pack .boxs .text:first-child {
  padding-top: 0;
}

.body .main .pack .boxs .text .textTitle {
  font-weight: bold;
}

.body .main .pack .boxs .productList {
  padding-bottom: 30rpx;
  border-bottom: 2rpx solid rgba(0, 0, 0, .1);
  display: flex;
  margin-bottom: 30rpx;
}

.body .main .pack .boxs .productList:last-child {
  padding-bottom: 0;
  border-bottom: 0;
}

.body .main .pack .boxs .productList .pic {
  width: 156rpx;
  height: 156rpx;
  border-radius: 20rpx;
  overflow: hidden;
  position: relative;
}

.body .main .pack .boxs .productList .pic .label {
  position: absolute;
  left: 0;
  top: 0;
  font-size: 28rpx;
  color: #fff;
  padding: 2rpx 6rpx;
  background: rgba(6, 195, 93, 1);
  border-radius: 20rpx 0px 20rpx 0px;
}

.body .main .pack .boxs .productList .pic image {
  width: 100%;
  height: 100%;
}

.body .main .pack .boxs .productList .product {
  width: 486rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-left: 20rpx;
}

.body .main .pack .boxs .productList .product .name {
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
}

.body .main .pack .boxs .productList .product .tip {
  display: flex;
  justify-content: space-between;
}

.body .main .pack .boxs .productList .product .tip .specs {
  width: 388rpx;
  color: #999999;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

/* 历史开单数 */
.order-box {
  padding: 30rpx 24rpx;
}

.order-box .order-detail {
  width: 702rpx;
  background: #fff;
  border-radius: 20rpx;
  padding: 20rpx;
  box-sizing: border-box;
  margin-bottom: 15px;
}

.order-box .order-detail .order-status {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.order-box .order-detail .order-status view {
  font-size: 32rpx;
  color: #333;
  line-height: 44rpx;
}

.order-box .order-detail .order-status view.status1 {
  color: #FF5900;
}

.order-box .order-detail .order-status view.status2 {
  color: #0069FF;
}

.order-box .order-detail .order-status view.status3 {
  color: #333;
}

.order-box .order-detail .order-status view.status4 {
  color: #999;
}

.order-box .order-detail .product-details {
  margin-top: 12rpx;
  display: flex;
  padding-top: 18rpx;
}

.order-box .order-detail .product-details .left-img {
  width: 124rpx;
  height: 124rpx;
  background: rgba(216, 216, 216, 1);
  border-radius: 12rpx;
  margin-right: 20rpx;
  overflow: hidden;
}

.order-box .order-detail .product-details .left-img image {
  width: 124rpx;
  height: 124rpx;
}

.order-box .order-detail .product-details .right-info {
  flex: 1;
}

.order-box .order-detail .product-details.last-item .right-info {
  border-bottom: 2rpx solid rgba(0, 0, 0, .1);
}

.order-box .order-detail .product-details .right-info .name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  line-height: 40rpx;
  margin-bottom: 2rpx;
}

.order-box .order-detail .product-details .right-info .spec {
  font-size: 28rpx;
  font-weight: 400;
  color: #999;
  line-height: 40rpx;
  margin-bottom: 8rpx;
}

.order-box .order-detail .product-details .right-info .price {
  font-size: 32rpx;
  font-weight: bold;
  color: #FF3000;
  line-height: 44rpx;
  margin-bottom: 20rpx;
}

.order-box .order-detail .product-details .right-info .price text {
  color: #333333;
  font-weight: normal;
}

.order-box .order-detail .order-info {
  font-size: 28rpx;
  font-weight: 400;
  color: #333;
  line-height: 40rpx;
}