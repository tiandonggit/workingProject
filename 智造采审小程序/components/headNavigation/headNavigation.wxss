/* components/headNavigation.wxss */
/* 自定义导航栏开始 */
.custom {
  width: 100%;
  height: 44px;
  z-index: 999;
  
  display: flex;
  align-items: center
}
.title {
  width: 100%;
  text-align: center;
  line-height: 44px;
  font-size: 18px;
  color: #FFF;
}
.label {
  display: flex;
  width: 450rpx;
  overflow: hidden;
  box-sizing: border-box;
  position: relative;
  justify-content: space-between;
  color:#FFF;
  height: 100%;
  align-items: center;
  padding-left: 114rpx;
}
.label view {
  height: 100%;
  display: flex;
  align-items: center;
}
.select {
  font-weight:bold;
}
.label .bottom_border {
  position: absolute;
  bottom: 0;
  left: 0;
  z-index: 1;
  height: 2px;
  background-color: #FFF;
  border-radius: 3px;
}
.capsule {
  margin-left: 10px;
  height: 32px;
  /* border: 1px solid #777; */
  border-radius: 16px;
  display: flex;
  align-items: center;
  float: left;
}

.capsule > view {
  width: 32px;
  height: 60%;
  position: relative;
  color: #FFF;
}

.capsule > view:nth-child(2) {
  border-left: 1px solid #777;  
}

.capsule image {
  width: 60%;
  height: 100%;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
}
.empty_custom {
  height: 44px;
  width: 100%;
}
/* 自定义导航栏结束 */