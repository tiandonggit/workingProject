.list-warpper {
  position: relative;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
}

.list-scroll {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
}
.list-scroll.top{
  padding-top: 90rpx;
}

/* 样式控制  */

.list-title {
  background: #EDEDED;
  color: #333;
  font-size: 36rpx;
  /* padding: 10rpx; */
  padding-left: 30rpx;
  height: 98rpx;
  line-height: 98rpx;
  /* height: 80rpx;
  line-height: 80rpx; */

  /* padding-top: 15rpx; */
}

.list-name-box{
  background: #fff;
  border-radius:20rpx;
}

.list-name {
  /* font-size: 28rpx; */
  font-size: 36rpx;
  position: relative;
  padding: 30rpx;
  /* padding: 15rpx; */
  padding-left: 30rpx;
  color: #333;
}

.list-name.border::after {
  content: "";
  position: absolute;
  left: 0rpx;
  right: 0;
  top: 0;
  height: 1px;
  background: #000000;
  opacity:0.1;
}

.list-right-wrapper {
  width: 60rpx;
  position: absolute;
  top: 95rpx;
  right: 20rpx;
  padding: 20rpx 0;
  border-radius: 40rpx;
  /* z-index: 2; */
  box-sizing: border-box;
  z-index: 999;
  font-size: 24rpx;
  text-align: center;
}

.right-item {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 6rpx 10rpx;
  font-size: 26rpx;
  color: #666;
}
.right-item.active {
  color: #0069FF
}
.list-search {
  
  position: absolute;
  top: 0;
  left: 0;
  display: flex;
  align-items: center;
  width: 100%;
  height: 90rpx;
  padding: 10rpx 30rpx;
  box-sizing: border-box;
  z-index: 20;
  background: #FFF;
  border-radius:12rpx;
  margin-top: 12rpx;
}

.search-title {
  flex-shrink: 0;
  font-size: 28rpx;
  padding-right: 10rpx;
}

.list-search-box {
  display: flex;
  align-items: center;
  /* padding: 0 30rpx; */
  width: 100%;
  height: 70rpx;
  border-radius: 90rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  /* height:68px; */
background:rgba(255,255,255,1);

}

.list-search-box input {
  width: 100%;
  padding-left: 10rpx;
}

.search-button {
  /* width: 100rpx; */
  flex-shrink: 0;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 28rpx;
  margin-left: 10rpx;
}

/* 热门城市横排显示样式  */

.list-horizontal {
  display: flex;
  flex-wrap: wrap;
  padding: 10rpx;
  padding-right: 50rpx;
}

.list-horizontal .list-name {
  padding: 5rpx 20rpx;
  border: 1px #ccc solid;
  border-radius: 10rpx;
  margin: 10rpx;
  /* margin-right: 20rpx; */
}
.fiexed-box {
    position: absolute;
    top: 90rpx;
    z-index: 19;
    width: 100%;
    /* background: #ddd; */
   

}

/* 无数据  */
.nodata {
  padding-top: 200rpx;
  text-align: center;
  font-size: 32rpx;
  color: #ddd;
}

/* 所在地区  */
.selectCity_box{
  height: 112rpx;
  border-bottom: 1px #cccccc solid;
}
.selectCity_content{
  border-radius: 10px;
  background: #fff;
  width: 184rpx;
  height: 72rpx;
  line-height: 72rpx;
  font-size: 32rpx;
  position: relative;
  color: #333;
  text-align: center;
}

.place-holder{
  color: #CCCCCC;
  font-size: 32rpx;
}