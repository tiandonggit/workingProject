/* pages/detailsPage/detailsPage.wxss */

.main {
  position: fixed;
  width: 100%;
  top: 0;
  bottom: 20rpx;
  display: flex;
  flex-direction: column;
}

.main_scroll {
  flex-grow: 1;
  overflow: scroll;
  padding: 30rpx 24rpx;
  -webkit-overflow-scrolling: touch;
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}

.card {
  background-color: #fff;
  border-radius: 20rpx;
}

.card .row {
  padding: 0 40rpx;
  line-height: 90rpx;
  color: #333;
  font-size: 32rpx;
  border-bottom: 2rpx solid #e9e9e9;
  display: flex
}

.card .green {
  color: #0069FF;
}

.card .red {
  color: #FF3000;
}

.cardtt {
  margin: 30rpx 0 62rpx;
}

.card .row:last-child {
  border-bottom: 0rpx;
}

.main_scroll .foot {
  width: 100%;
  position: fixed;
  bottom: 20rpx;
  left: 0;
  display: flex;
  background: #ededed;
  justify-content: space-around;
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}

.main_scroll .audit {
  font-size: 28rpx;
  color: #666666;
  justify-content: center;
  line-height: 44rpx;
}

.audit view:last-child {
  color: #0069FF;
}

.foot .button {
  width: 322rpx;
  text-align: center;
  border: 4rpx solid #0069ff;
  border-radius: 20rpx;
  line-height: 80rpx;
  font-size: 36rpx;
  color: #0069ff;
}

.foot .button:last-child {
  background: linear-gradient(225deg, rgba(1, 128, 255, 1) 0%, rgba(0, 105, 255, 1) 100%);
  color: #fff;
}

.foot .button-hover {
  opacity: 0.3;
}

.shade .van-transition {
  background-color: var(--overlay-background-color,rgba(0,0,0,.1));
}

.shade .van-popup {
  width: 526rpx;
  border-radius:20rpx;
}

.shade .van-dialog__message {
  padding-top: 80rpx;
  padding-bottom: 80rpx;
  font-size: 32rpx; 
}

.shade .van-button {
  font-weight:bold;
  font-size:36rpx;
  color: #333;
}

.shade .van-dialog__header {
  padding: 40rpx 0;
  color: #333;
  font-weight:bold;
  line-height:20px;
  font-size: 32rpx
}

.shade .dialog-index--van-dialog__confirm {
  background:linear-gradient(227deg,rgba(1,128,255,1) 0%,rgba(0,105,255,1) 100%,rgba(0,105,255,1) 100%);
  color: #FFF;
}

.shade textarea {
  width: 446rpx;
  background-color: #F2F2F2;
  border-radius:20rpx;
  margin: 0 20rpx 40rpx;
  padding: 26rpx 20rpx;
  font-size: 32rpx;
  color: #333;
  line-height: 40rpx;
}

.placeholder_class {
  color: #999;
  font-size: 32rpx;
  line-height: 40rpx;
}