.van-search__content.van-search__content--square {
  background-color: #fff;
  border-radius: 12rpx;
}

.van-search {
  background: none !important;
}

.list {
  padding: 12rpx 0 24rpx 24rpx;
  box-sizing: border-box;
}

.list-item {
  display: flex;
  padding: 30rpx 40rpx;
  align-items: center;
  margin-bottom: 30rpx;
  margin-right: 24rpx;
  background-color: #fff;
  border-radius: 20rpx;
}

.list-item .img {
  display: block;
  width: 120rpx;
  height: 120rpx;
  border-radius: 10rpx;
}

.list-item .message-box {
  flex: 1;
  width: 0;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  /* justify-content: space-around; */
  padding-left: 20rpx;
}

.list-item .message-box p {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-weight: 400;
  margin-bottom: 10rpx;
}

.list-item .message-box .name {
  font-size: 32rpx;
  color: rgba(51, 51, 51, 1);
}

.list-item .name .identity {
  display: inline;
  font-size: 28rpx;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  background: linear-gradient(227deg, rgba(0, 222, 141, 1) 0%, rgba(0, 198, 107, 1) 100%);
  border-radius: 8rpx;
  padding: 0 10rpx;
  margin-left: 20rpx;
}

.list-item .name .zongguan {
  background: linear-gradient(180deg, rgba(14, 134, 254, 1) 0%, rgba(14, 134, 254, 1) 100%) !important;
}

.list-item .name .zhuanyuan {
  background: linear-gradient(227deg, rgba(0, 222, 141, 1) 0%, rgba(0, 198, 107, 1) 100%) !important;
}

.list-item .message-box .phone, .list-item .message-box .address {
  font-size: 28rpx;
  color: rgba(102, 102, 102, 1);
}

.no_result {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.no_result .img {
  display: block;
  width: 400rpx;
  height: 400rpx;
  margin: 300rpx 0 60rpx 0;
}

.no_result .span {
  font-size: 32rpx;
  font-weight: bold;
  color: rgba(51, 51, 51, 1);
}
