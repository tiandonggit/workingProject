/* pages/info/info.wxss */

page {
  background-color: #fff;
}

.info {
  padding-left: 24rpx;
  padding-right: 24rpx;
  font-size: 36rpx;
}

view.search {
  margin-top: 40rpx;
  display: flex;
  flex-direction: row;
  height: 96rpx;
  background: #fff;
  /* background: rgba(0,0,0,0.4); */
  align-items: center;
  width: 100%;
  /* margin-left: 4%;
    margin-right: 4%; */
  border-radius: 20rpx;
}

view.searchItem {
  display: flex;
  width: 100%;
  /* background: #fff; */
  flex-direction: row;
  border-radius: 10rpx;
  margin-right: 20rpx;
  margin-left: 20rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

view.searchItem image {
  height: 64rpx;
  width: 56rpx;
  align-self: center;
}

view.searchItem input {
  flex: 1;
  font-size: 36rpx;
  margin-left: 10rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  margin-top: 10rpx;
}

.section {
  /* display: flex; *//* height:448rpx; */
  background: rgba(237, 237, 237, 1);
  border-radius: 20px;
  margin-top: 40rpx;
  padding-top: 20rpx;
  padding-right: 14rpx;
  padding-left: 22rpx;
  padding-bottom: 20rpx;
}

.sectionTexts {
  overflow: hidden;
  text-align: left;
  text-overflow: ellipsis;
  display: -webkit-box !important;
  -webkit-line-clamp: 9;
  /*! autoprefixer: off */
  -webkit-box-orient: vertical;
  /*! autoprefixer: on */
}

.section span {
  width: 140rpx;
}

.upload_box {
  height: 526rpx;
  background: rgba(237, 237, 237, 1);
  border-radius: 20px;
  margin-top: 40rpx;
  padding-top: 20rpx;
  padding-right: 20rpx;
  padding-left: 20rpx;
}

.upload_box span {
  width: 100%;
  height: 40rpx;
}

.upload {
  background-color: #fff;
  /* width: 100%; */
  height: 280rpx;
  border-radius: 20px;
  margin-top: 30rpx;
  padding-top: 130rpx;
}

.upload .noImg {
  width: 120rpx;
  height: 105rpx;
  margin: 0 auto;
  display: block;
}

.uploadImg {
  height: 390rpx;
  padding: 20rpx;
}

.upload .Img {
  width: 100%;
  height: 100%;
}

.upload p {
  text-align: center;
  font-size: 28rpx;
  margin: 0 auto;
  display: block;
  margin-top: 78rpx;
}

.submit {
  width: 94%;
  margin: 0 auto;
  color: #fff;
  margin-top: 40rpx;
  margin-bottom: 40rpx;
  height: 88rpx;
  line-height: 88rpx;
  background: linear-gradient(270deg, rgba(14, 134, 254, 1) 0%, rgba(0, 105, 255, 1) 100%);
  border-radius: 20rpx;
}

