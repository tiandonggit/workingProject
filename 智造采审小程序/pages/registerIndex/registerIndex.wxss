/* 下拉菜单 */

.page {
  background: rgba(237, 237, 237, 1);
  display: block;
  min-height: 100%;
  width: 100%;
  position: absolute;
  left: 0;
  top: 0;
  z-index: 1;
}

.select_box {
  background: #fff;
  width: 100%;
  margin: 30rpx auto;
  position: relative;
  border-radius: 20rpx;
}

.select {
  box-sizing: border-box;
  width: 100%;
  height: 96rpx;

  border-radius: 10rpx;
  display: flex;

  padding: 0 20rpx;

  flex-direction: row; /*设置排列方式*/
  justify-content: space-between; /*设置水平对齐方式*/
  align-items: flex-start; /*设置改行垂直对齐方式*/
  flex-wrap: wrap; /*设置溢出是否换行*/
}

.select image {
  height: 64rpx;
  width: 56rpx;
  align-self: center;
}

.select_text {
  font-size: 36rpx;
  flex: ;
  padding-top: 22rpx;
  text-align: left;
  color: #999;
  width: 78%;
}

.select_img {
  width: 40rpx;
  height: 40rpx;
  display: block;
  transition: transform 0.3s;
  margin-top: 26rpx;
  color: #666;
}

.select_img_rotate {
  transform: rotate(90deg);
  transform-origin:center center;
}

.option_box {
  position: absolute;
  top: 96rpx;
  width: 100%;
  border: 1px solid #efefef;
  box-sizing: border-box;
  /* height: ; */
  overflow-y: auto;
  /* border-top: ; */
  background: #fff;
  transition: height 0.3s;
  z-index: 999;
  border-radius: 20rpx;
}

.option {
  display: block;
  /* line-height: 90rpx; */
  font-size: 36rpx;
  border-bottom: 1px solid #efefef;
  padding: 10rpx;
  padding-left: 20rpx;
  color: #999;
}

.van-icon-arrow {
  color: #666;
}
